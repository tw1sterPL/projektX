@model IEnumerable<KoloTumak.Data.Data.CMS.Contact>

@{
    ViewData["Title"] = "Index";
}
<div class="home">
<header class="header__intranet flex-container">
<div class="flex-items">
<h1 class="text__intranet__header">Kontakt</h1>
</div>
<div class="flex-items">
<p class="button__header">
    <a class="btn__header" asp-action="Create">Dodaj kontakt</a>
</p>
</div>
</header>
<table class="table">
    <thead class="table__header">
        <tr class="table__row">
            <th class="table__cell u-text-center">
                @Html.DisplayNameFor(model => model.NameText)
            </th>
            <th class="table__cell u-text-center">
                @Html.DisplayNameFor(model => model.Contents)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="table__account table__cell u-text-center"> 
                @Html.DisplayFor(modelItem => item.NameText)
            </td>
            <td class="table__account table__cell u-text-center">
                @Html.DisplayFor(modelItem => item.Contents)
            </td>
            <td class="table__account table__cell u-text-center">
                <a class="btn" asp-action="Edit" asp-route-id="@item.IdPosition">Edytuj</a>
                <br></br>
                <a class="btn" asp-action="Delete" asp-route-id="@item.IdPosition">Skasuj</a>
            </td>
        </tr>
}
    </tbody>
</table>
