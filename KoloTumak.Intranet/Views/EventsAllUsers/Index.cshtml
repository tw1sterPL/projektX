@model IEnumerable<KoloTumak.Data.Data.CMS.EventsAllUser>

@{
    ViewData["Title"] = "Index";
}
<div class="home">
<header class="header__intranet flex-container">
<div class="flex-items">
<h1 class="text__intranet__header">Wydarzenia</h1>
</div>
<div class="flex-items">
<p class="button__header">
    <a class="btn__header" asp-action="Create">Dodaj nowe wydarzenie</a>
</p>
</div>
</header>
<table class="table">
    <thead class="table__header">
        <tr class="table__row">
            <th class="table__cell u-text-center">
                @Html.DisplayNameFor(model => model.DateStart)
            </th>
            <th class="table__cell u-text-center">
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th class="table__cell u-text-center">
                @Html.DisplayNameFor(model => model.Place)
            </th>
            <th class="table__cell u-text-center">
                @Html.DisplayNameFor(model => model.NameSurnameResponsiblePerson)
            </th>
            <th class="table__cell u-text-center">
                @Html.DisplayNameFor(model => model.Contact)
            </th>
            <th class="table__cell u-text-center"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="table__account table__cell u-text-center">
                @Html.DisplayFor(modelItem => item.DateStart)
            </td>
            <td class="table__account table__cell u-text-center">
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td class="table__account table__cell u-text-center">
                @Html.DisplayFor(modelItem => item.Place)
            </td>
            <td class="table__account table__cell u-text-center">
                @Html.DisplayFor(modelItem => item.NameSurnameResponsiblePerson)
            </td>
            <td class="table__account table__cell u-text-center">
                @Html.DisplayFor(modelItem => item.Contact)
            </td>
            <td class="table__account table__cell u-text-center">
                <a class="btn" asp-action="Edit" asp-route-id="@item.IdEvents">Edytuj</a>
                <br></br>
                <a class="btn" asp-action="Delete" asp-route-id="@item.IdEvents">Skasuj</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
