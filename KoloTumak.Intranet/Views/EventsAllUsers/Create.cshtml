@model KoloTumak.Data.Data.CMS.EventsAllUser

@{
    ViewData["Title"] = "Create";
    Layout = "_LayoutNotFull";
}
<div class="content-wrapper">
    <!-- Content -->
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Aktualności/</span> Nowa aktualność</h4>
        <!-- Basic Layout -->
        <div class="row">
            <div class="col-xl">
                <div class="card mb-4">
                    <div class="card-body">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="mb-3">
                                <label asp-for="DateStart" for="html5-datetime-local-input" class="col-md-2 col-form-label"></label>
                                <div class="col-md-12">
                                    <input asp-for="DateStart"
                                           class="form-control"
                                           type="datetime-local"
                                           placeholder="Data i czas rozpoczęcia"
                                           id="html5-datetime-local-input" />
                                </div>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Type" class="form-label" for="basic-icon-default-company"></label>
                                <div class="input-group input-group-merge">
                                    <input asp-for="Type" type="text" id="basic-icon-default-company" class="form-control" placeholder="Typ" aria-label="ACME Inc." aria-describedby="basic-icon-default-company2" />
                                </div>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Place" class="form-label" for="basic-icon-default-email"></label>
                                <div class="input-group input-group-merge">
                                    <input asp-for="Place" type="text" id="basic-icon-default-email" class="form-control" placeholder="Miejsce wydarzenia" aria-label="john.doe" aria-describedby="basic-icon-default-email2" />
                                    <span asp-validation-for="Place" id="basic-icon-default-email2" class="input-group-text"></span>
                                </div>
                                @*<div class="form-text">You can use letters, numbers & periods</div>*@
                            </div>
                            <div class="mb-3">
                                <label asp-for="NameSurnameResponsiblePerson" class="form-label" for="basic-icon-default-phone"></label>
                                <div class="input-group input-group-merge">
                                    <span asp-validation-for="NameSurnameResponsiblePerson" id="basic-icon-default-phone2" class="input-group-text"></span>
                                    <input asp-for="NameSurnameResponsiblePerson" type="text" id="basic-icon-default-phone" class="form-control phone-mask" placeholder="Miejsce wydarzenia" aria-label="658 799 8941" aria-describedby="basic-icon-default-phone2" />
                                </div>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Contact" class="form-label" for="basic-icon-default-phone"></label>
                                <div class="input-group input-group-merge">
                                    <span asp-validation-for="Contact" id="basic-icon-default-phone2" class="input-group-text"></span>
                                    <input asp-for="Contact" type="text" id="basic-icon-default-phone" class="form-control phone-mask" placeholder="658 799 8941" aria-label="658 799 8941" aria-describedby="basic-icon-default-phone2" />
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary">Stwórz</button>
                            <button onclick="location.href='@Url.Action("Index","EventsAllUsers")'" type="submit" class="btn btn-primary">Cofnij</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

