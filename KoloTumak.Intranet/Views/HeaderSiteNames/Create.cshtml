@model KoloTumak.Data.Data.CMS.HeaderSiteName

@{
    ViewData["Title"] = "Create";
    Layout = "_LayoutNotFull";
}
<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Napis główny/</span> Nowy napis</h4>

        <!-- Basic Layout -->
        <div class="row">
            <div class="col-xl">
                <div class="card mb-4">
                    <div class="card-body">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="mb-3">
                                <label asp-for="NameSiteHeader" class="form-label" for="basic-icon-default-email"></label>
                                <div class="input-group input-group-merge">
                                    <input asp-for="NameSiteHeader" type="text" id="basic-icon-default-email" class="form-control" placeholder="Miejsce wydarzenia" aria-label="john.doe" aria-describedby="basic-icon-default-email2" />
                                    <span asp-validation-for="NameSiteHeader" id="basic-icon-default-email2" class="input-group-text"></span>
                                </div>
                                @*<div class="form-text">You can use letters, numbers & periods</div>*@
                            </div>                           
                            <button type="submit" class="btn btn-primary">Stwórz</button>
                            <button onclick="location.href='@Url.Action("Index", "HeaderSiteNames")'"type="submit" class="btn btn-primary">Cofnij</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

