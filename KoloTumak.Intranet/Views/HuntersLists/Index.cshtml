@model IEnumerable<KoloTumak.Data.Data.CMS.HuntersList>

@{
    ViewData["Title"] = "Index";
}
<div class="home">
<header class="header__intranet flex-container">
<div class="flex-items">
<h1 class="text__intranet__header">Lista członków koła</h1>
</div>
<div class="flex-items">
<p class="button__header">
    <a class="btn__header" asp-action="Create">Dodaj członka</a>
</p>
</div>
</header>
<table class="table">
    <thead class="table__header">
        <tr class="table__row">
            <th class="table__row">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="table__cell u-text-center">
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th class="table__cell u-text-center">
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th class="table__cell u-text-center">
                @Html.DisplayNameFor(model => model.Contact)
            </th>
            <th class="table__cell u-text-center"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="table__row">
            <td class="table__account table__cell u-text-center">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td class="table__account table__cell u-text-center">
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td class="table__account table__cell u-text-center">
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td class="table__account table__cell u-text-center">
                @Html.DisplayFor(modelItem => item.Contact)
            </td>
            <td class="table__transfer table__cell u-text-center">
                <a class="btn" asp-action="Edit" asp-route-id="@item.IdHunters">Edit</a>
                <br></br>
                <a class="btn" asp-action="Delete" asp-route-id="@item.IdHunters">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>