@model IEnumerable<KoloTumak.Intranet.Models.CMS.HuntersList>

@{
    ViewData["Title"] = "Index";
}
<div class="home">
<h1 class="text">Lista członków koła</h1>

<p class="text">
    <a asp-action="Create">Dodaj nowego członka</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contact)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contact)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdHunters">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdHunters">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdHunters">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>