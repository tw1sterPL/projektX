@model KoloTumak.Data.Data.CMS.News
@{
    ViewData["Title"] = "Edit";
    Layout = "_LayoutNotFull";
}
<div class="content-wrapper">
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Wydarzenia/</span> Edycja</h4>
        <!-- Basic Layout -->
        <div class="row">
            <div class="col-xl">
                <div class="card mb-4">
                    <div class="card-body">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="mb-3">
                                <label asp-for="DateStart" for="html5-datetime-local-input" class="col-md-2 col-form-label"></label>
                                <div class="col-md-12">
                                    <input asp-for="DateStart"
                                           class="form-control"
                                           type="datetime-local"
                                           placeholder="Data i czas wydarzenia"
                                           id="html5-datetime-local-input" />
                                </div>
                            </div>
                            <div class="mb-3">
                                <label asp-for="NameSurnameAdd" class="form-label" for="basic-icon-default-company"></label>
                                <div class="input-group input-group-merge">
                                    <input asp-for="NameSurnameAdd" type="text" id="basic-icon-default-company" class="form-control" placeholder="Osoba dodająca" aria-label="ACME Inc." aria-describedby="basic-icon-default-company2" />
                                </div>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Contents" class="form-label" for="basic-icon-default-message">Tekst wydarzenia</label>
                                <div class="input-group input-group-merge">
                                    <span asp-validation-for="Contents" id="basic-icon-default-message2" class="input-group-text"><i class="bx bx-comment"></i></span>
                                    <textarea asp-for="Contents"
                                              id="basic-icon-default-message"
                                              class="form-control"
                                              placeholder="W tym miejscu wpisz tekst wydarzenia"
                                              aria-label="Hi, Do you have a moment to talk Joe?"
                                              aria-describedby="basic-icon-default-message2"></textarea>
                                </div>
                            </div>
                            @*<div class="mb-3">
                            <label class="form-label" for="basic-icon-default-message">Message</label>
                            <div class="input-group input-group-merge">
                            <span id="basic-icon-default-message2" class="input-group-text"><i class="bx bx-comment"></i></span>
                            <textarea
                            id="basic-icon-default-message"
                            class="form-control"
                            placeholder="Hi, Do you have a moment to talk Joe?"
                            aria-label="Hi, Do you have a moment to talk Joe?"
                            aria-describedby="basic-icon-default-message2"
                            ></textarea>
                            </div>
                            </div>*@
                            <button type="submit" class="btn btn-primary">Stwórz</button>
                            <button asp-action="Index" class="btn btn-primary">Cofnij</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

