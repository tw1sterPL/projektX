@model IEnumerable<KoloTumak.Data.Data.CMS.News>

@{
    ViewData["Title"] = "Index";
}
<div class="home">
<header class="header__intranet flex-container">
<div class="flex-items">
<h1 class="text__intranet__header">aktualności</h1>
</div>
<div class="flex-items">
<p class="button__header">
    <a class="btn__header" asp-action="create">dodaj aktualność</a>
</p>
</div>
</header>
<table class="table">
    <thead class="table__header">
        <tr class="table__row">
            <th class="table__row">
                @Html.DisplayNameFor(model => model.IdPosition)
            </th>
            <th class="table__cell u-text-right">
                @Html.DisplayNameFor(model => model.DateStart)
            </th>
            <th class="table__cell u-text-right">
                @Html.DisplayNameFor(model => model.NameSurnameAdd)
            </th>
            <th class="table__cell u-text-center">
                @Html.DisplayNameFor(model => model.Contents)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="table__row">
            <td class="table__account table__cell">
                @Html.DisplayFor(modelItem => item.IdPosition)
            </td>
            <td class="table__account table__cell">
                @Html.DisplayFor(modelItem => item.DateStart)
            </td>
            <td class="table__account table__cell">
                @Html.DisplayFor(modelItem => item.NameSurnameAdd)
            </td>
            <td class="table__account table__cell">
                @Html.DisplayFor(modelItem => item.Contents)
            </td>
            <td class="table__transfer table__cell u-text-center">
                <a class="btn" asp-action="Edit" asp-route-id="@item.IdNews">Edit</a>
                <a class="btn" asp-action="Delete" asp-route-id="@item.IdNews">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
